        <idnumber>$@NULL@$</idnumber>
        <plugin_qtype_multichoice_question>
          <answers>
            <answer id="10045">
              <answertext>&lt;p&gt;\(A=\left[{ \begin{array}{cc}1&amp;amp;0\\2&amp;amp;3\end{array}} \right]\)&lt;/p&gt;</answertext>
              <answerformat>1</answerformat>
              <fraction>0.3333333</fraction>
              <feedback>&lt;p&gt;\(|A|=1\times 3 - 0\times 2 = 3\).&lt;/p&gt;</feedback>
              <feedbackformat>1</feedbackformat>
            </answer>
            <answer id="10046">
              <answertext>&lt;p&gt;\(B=\left[{ \begin{array}{cc}1&amp;amp;1\\-1&amp;amp;1\end{array}} \right]\)&lt;/p&gt;</answertext>
              <answerformat>1</answerformat>
              <fraction>0.3333333</fraction>
              <feedback>&lt;p&gt;\(|B|=1+1 =2\).&lt;br&gt;&lt;/p&gt;</feedback>
              <feedbackformat>1</feedbackformat>
            </answer>
            <answer id="10047">
              <answertext>&lt;p&gt;\(C=\left[{ \begin{array}{cc}1&amp;amp;-1\\-2&amp;amp;2\end{array}} \right]\)&lt;br&gt;&lt;/p&gt;</answertext>
              <answerformat>1</answerformat>
              <fraction>0.0000000</fraction>
              <feedback>&lt;p&gt;\(|C|=2-2 =0\). Therefore \(C\) has no inverse because its determinant is zero.&lt;br&gt;&lt;/p&gt;</feedback>
              <feedbackformat>1</feedbackformat>
            </answer>
            <answer id="10048">
              <answertext>&lt;p&gt;\(D=\left[{ \begin{array}{cc}2&amp;amp;0\\0&amp;amp;2\end{array}} \right]\)&lt;/p&gt;</answertext>
              <answerformat>1</answerformat>
              <fraction>0.3333333</fraction>
              <feedback>&lt;p&gt;\(|D|=4-0 =4\).&lt;br&gt;&lt;/p&gt;</feedback>
              <feedbackformat>1</feedbackformat>
            </answer>

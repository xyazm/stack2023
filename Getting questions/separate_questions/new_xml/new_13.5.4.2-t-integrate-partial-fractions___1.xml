    <questionvariables>
				<text>/*Randomisation*/
A1: rand(3)+1;
B1: rand([-2,-3,-4]);
a1: rand(4)+3;
b1: rand_with_prohib(3,6,[a1]);

/*Question Variables*/
exp1: A1/(x-a1) + B1/(x+b1);
exp2: ratsimp(exp1);
den_fact(expr) := num(expr)/factor(denom(expr));        /*define function that displays exp2 on a certain way, expanded numerator and factorised denominator*/ 
exp2: den_fact(exp2);

/*Answers*/
taB: B1;
taA: A1;
ta3: int(exp1,x)+c;</text>

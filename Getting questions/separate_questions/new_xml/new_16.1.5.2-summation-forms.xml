    <questionvariables>
				<text>/*Randomization constants*/
const1: rand(3)+1;
const2: rand(3)+1;

/*Series 1*/
ser1: lambda([x], ev(log(ev(2*n-1,simp))/(ev(n+const1,simp)*n),n=x));
bound1:14;
ta1: ser1(p);

n_1: 3;
SA1:ev(makelist(k,k,1,n_1),simp);             /* create the sum of terms */
SA2:maplist(ser1,SA1);
SA3:append(SA2,["...",ser1(bound1)]);
SA4:apply("+",SA3);


/*Series 2*/
ser2: lambda([x], ev((-1)^x,simp) /(ev(x+const2,simp)*(1+ev((-1)^(x+1),simp)*(ev(x*100,simp))^2)));
bound2:8;
ta2: ser2(p);

n_2: 3;
SB1:ev(makelist(k,k,1,n_2),simp);             /* create the sum of terms */
SB2:maplist(ser2,SB1);
SB3:append(SB2,["...",ser2(bound2)]);
SB4:apply("+",SB3);
</text>

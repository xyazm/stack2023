    <questionvariables>
				<text>n: rand([2,4,6,8,10]);
a: rand([3,5]);
fx: x^n-a^x;
fnx: x^n-a^(-x);
simp:false;
even1: 1/2 * (fx+fnx);
odd1: 1/2 * (fx-fnx);
even: ev(expand(even1),simp);
odd: ev(expand(odd1),simp);
test: ev(collectterms(even,1/2),simp);</text>

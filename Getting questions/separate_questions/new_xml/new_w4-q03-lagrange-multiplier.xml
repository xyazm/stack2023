    <questionvariables>
				<text>v1:x;
v2:y;
a: rand(5)+3;
b: rand_with_prohib(2,5,[a]);
orderless(l,v1,v2);
f: v1*v2;
C: x^2/a+y^2/b=1;
/*  Problem setup above this line.  */
P1:f-l*(lhs(C)-rhs(C));
DP1:diff(P1,v1);
DP2:diff(P1,v2);
DPl:diff(P1,l);
H1:diff(f,v1,2)*diff(f,v2,2)-(diff(f,v1,1,v2,1))^2;
ssol:solve([DP1,DP2,DPl],[v1,v2,l]);
/* Extract the real solutions only */
ssol:sublist(ssol,lambda([ex],all_listp(real_numberp,maplist(rhs,ex))));
/* returns the list of critical points*/
extvr:maplist(rhs,flatten(maplist(lambda([ex],sublist(ex,lambda([ex2], lhs(ex2)=v1))),ssol)));
extv:setify(extvr);  /* x coordinates of critical points*/

/* returns the list of y values*/
extyr:maplist(rhs,flatten(maplist(lambda([ex],sublist(ex,lambda([ex2], lhs(ex2)=v2))),ssol)));
exty:setify(extyr);  /* y coordinates of critical points*/

f(v1,v2):=v1*v2;
x1: lmax(extvr);
x2: lmin(extvr);
y1: lmax(extyr);
y2: lmin(extyr);
tamax: f(x1, y1);
tamin: f(x1,y2);</text>

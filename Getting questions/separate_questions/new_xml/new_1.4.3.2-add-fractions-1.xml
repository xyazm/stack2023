				<text>simp:false;
v: rand([x,z,s,t]);

a1: rand([4,6]);
a2: rand([5,7]);
exp1: v/a1+v/a2;
ta1: fullratsimp(exp1)
ta1: ev(ta1,simp);

b1: rand([3,4,5])
b2: ev(b1+1,simp);
exp2: 2*v/b1- b1*v/b2;
ta2: fullratsimp(exp2);
ta2: ev(ta2,simp);

c1: ev(rand(5)+3,simp);
exp3: (v+1)/v+c1/(v+2);
ta3: ev( expand((v+1)*(v+2)+c1*v), simp)/(v*(v+2));

d1: ev(rand(5)+2,simp);
d2: ev(rand(4)+2, simp);
exp4: v/(v+1)- d1/(v+d2);
num4: ev(expand(v*(v+d2))-expand(d1*(v+1)),simp);
ta4: num4/((v+1)*(v+d2));</text>

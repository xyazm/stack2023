ta3: ev(determinant(matrixc),simp);
AA: matrixa;
BB: matrixb;
CC: matrixc;
detAA: unary_minus_sort(AA[1,1]*AA[2,2]-AA[1,2]*AA[2,1]);
detBB: unary_minus_sort(BB[1,1]*BB[2,2]-BB[1,2]*BB[2,1]);
detCC: unary_minus_sort(CC[1,1]*CC[2,2]-CC[1,2]*CC[2,1]);</text>

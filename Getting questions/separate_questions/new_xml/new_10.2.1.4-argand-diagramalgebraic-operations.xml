    <questionvariables>
				<text>a:rand_with_prohib(-6,6,[-2,-1,0,1,2]);
b:rand([a-1,a,a+1,-a-1,-a,-a+1]);
absa:abs(a);
absb:abs(b);
z:a+%i*b;
c:rand_with_prohib(-7,7,[-2,-1,0,1,2]);
d:rand([c-1,c,c+1,-c-1,-c,-c+1]);
absc:abs(c);
absd:abs(d);
w:c+%i*d;
s:rand(4)+1;
t:rand(4)+4;
exp1: ev(s*z+t*w,simp);
absreal:abs(s*a+t*c);
abscomp:abs(s*b+t*d);
pts:[ [[absreal,abscomp],"A"],[[absreal,-abscomp],"B"],[[-absreal,-abscomp],"C"],[[-absreal,abscomp],"D"] ];

ta:map(lambda([ex],[ex[1],is(ex[1]=[s*a+t*c,s*b+t*d]),ex[2]]),pts);
cor1:[s*a+t*c,s*b+t*d];
letter1:maplist(third, sublist(ta, lambda([ex], second(ex))))[1];
</text>

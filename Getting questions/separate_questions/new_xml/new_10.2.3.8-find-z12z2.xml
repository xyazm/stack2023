    <questionvariables>
				<text>r1: rand(5)+2
th1: rand([%pi/3, %pi/4, %pi/6, -(2*%pi)/3, -(5*%pi)/6, -(3*%pi)/4])
r2: rand(8)+2
th2: rand([%pi/3, %pi/4, %pi/6, -(2*%pi)/3, -(5*%pi)/6, -(3*%pi)/4]);

z1: r1*exp(%i*th1)
z2: r2*exp(-%i*th2)

ta1_c: ratsimp((z1^2)*z2);
ta2: ratsimp((r1^2)*r2);
ta3: if 2*th1-th2 > %pi then 2*th1-th2 - 2*%pi else if 2*th1-th2 <= -%pi then 2*th1-th2+2*%pi else 2*th1-th2; </text>
		</questionvariables>
    <specificfeedback format="html">

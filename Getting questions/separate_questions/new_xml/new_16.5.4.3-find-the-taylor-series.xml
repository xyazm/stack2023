    <questionvariables>
				<text>x0: rand(8)+2;
p:x0-1;
exp: 1/(p-x);     /* choose this format so that the derivatives at x0 give integers */

fprime1: diff(exp,x,1);
ta1: subst(x=x0,fprime1);
fprime2: diff(exp,x,2);
ta2: subst(x=x0,fprime2);
fprime3: diff(exp,x,3);
ta3: subst(x=x0,fprime3);

simp:false;
fgeneral: n!/(p-x)^(n+1);
ta4: ev(subst(x=x0,fgeneral),simp);

ta5: ev(taylor(exp,x,x0,3),simp);
ta6: ev(taylor(exp,x,0,3),simp);</text>
		</questionvariables>

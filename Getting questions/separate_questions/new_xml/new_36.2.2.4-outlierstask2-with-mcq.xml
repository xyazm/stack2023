    <questionvariables>
				<text>/*Generate the data*/
L:random_binomial (50, 0.3, 25)
/*Add more extreme values and sort list*/
L:append(L,[rand_with_step(2,4,1), rand_with_step(1,4,1), rand_with_step(1,4,1), rand_with_step(23,27,1), rand_with_step(23,27,1)]);
L:sort(L);

/*add to 1 or 2 to last value so that mean is exact when reporting to 3dp*/
temp_sum: lsum(i,i,L);
L[length(L)]: if mod(temp_sum,3)=1 then L[length(L)]+2 else if mod(temp_sum,3)=2 then L[length(L)]+1 else L[length(L)];


/*Make the rows of the data table as sequences*/
L1:sequenceify(makelist(L[i],i,1,10));
L2:sequenceify(makelist(L[i],i,11,20));
L3:sequenceify(makelist(L[i],i,21,30));

/*Avoiding rounding errors, calculate mean and s.d.*/
ta1_raw:float(mean(L));
ta1:decimalplaces(ta1_raw,3);
ta2_raw:float(std1(L));
ta2:decimalplaces(ta2_raw,3);
ta2_bad_divByN: decimalplaces(float(sqrt(var1(L)*(length(L)-1)/length(L))),3);

/*List of answers for MCQ*/
J:listify(setify(L));
lenJ:length(J);

ta3:append(makelist([i,false,J[i]],i,1,lenJ),[[0,true,"none of the above"]]);
f(x) := if(x[2]) then x[1] ;
ta3_check: delete(false, maplist(f,ta3));

/*List, where the student picked all non-outliers*/
ta3_opposite:makelist(i,i,1,lenJ);

/*List, where the students picked all outliers based on IQR*/
rank_lower: 8;    /*LQ rank for length(L) = 30*/ 
rank_upper: 23;  /*UQ rank for length(L) = 30*/
Q_lower: L[rank_lower];
Q_upper: L[rank_upper];
IQR: Q_upper - Q_lower;
LIM_lower: Q_lower - 1.5*IQR;
LIM_upper: Q_upper + 1.5*IQR;
noneabove: is (J[1] >=LIM_lower) and is (J[lenJ]<=LIM_upper);
ta3_IQRoutlier: append(makelist([i, is (J[i] < LIM_lower) or is (J[i] > LIM_upper)],i,1,lenJ),[[0,noneabove,"none of the above"]]);  
ta3_IQRoutlier_check: delete(false, maplist(f,ta3_IQRoutlier));

/*List of x-x bar*/
tas_raw: makelist(float(J[i]-ta1),i,1,lenJ);
tas:makelist(decimalplaces(tas_raw[i],3),i,1,lenJ);
/*List of x-x bar squared*/
task_raw:makelist(tas_raw[i]^2,i,1,lenJ);
task: makelist(decimalplaces(task_raw[i],3),i,1,lenJ);

/*list of abs(x-x bar)/s.d.*/
re: makelist(decimalplaces(abs(tas_raw[i]/ta2_raw),3),i,1,lenJ);</text>

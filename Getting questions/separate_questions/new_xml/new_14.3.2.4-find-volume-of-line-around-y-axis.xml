    <questionvariables>
				<text>const: rand(6)+2;
x_sq: (1-y/const)^2;
f: const-const*x;
low: 0;
upp: const;

ta2up: const-const*low;
ta2dn: const-const*upp;
ta2int: pi*x^2;

ta3: simplify(integrate(pi*x_sq,y,ta2dn,ta2up));</text>

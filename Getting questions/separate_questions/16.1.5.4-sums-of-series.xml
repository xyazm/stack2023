            <questionvariables>/*Arithmetic and geometric series sums*/
asum: lambda([a,d,n], n*(2*a+d*(n-1))/2);
gsum: lambda([a,r,n], a*(1-r^n)/(1-r));

/*Randomization constants*/
lowa: rand([-4,-5,-6]);
stepd: rand([3,4,5]);
facr: rand([-1/3,-1/5]); 

/*Series 1 - arithmetic*/
a1: lowa;
d1: stepd;
n1: 9;
an_a: a1+(n-1)*d1;    /*nth term of arithmetic progresion */
n_1:4;                /*the terms I want to diplay */
SA1:ev(makelist(k,k,1,n_1),simp);             /* create the sum of terms */
SA2:maplist(lambda([ex],ev(an_a,n=ex)),SA1);
SA3:append(ev(SA2,simp),["...", ev(a1+(n1-1)*d1,simp)]);
SA4:apply("+",SA3);
ta1: ev(asum(a1,d1,n1),simp);

/*Series 2 - arithmetic*/
a2: lowa;
d2:-stepd;
n2:9;
an_b: a2+(n-1)*d2;    /*nth term of arithmetic progresion */
n_2:4;              /*the terms I want to diplay */
SB1:ev(makelist(k,k,1,n_2),simp);             /* create the sum of terms */
SB2:maplist(lambda([ex],ev(an_b,n=ex)),SB1);
SB3:append(ev(SB2,simp),["...",ev(a2+(n2-1)*d2,simp)]);
SB4:apply("+",SB3);
ta2: ev(asum(a2,d2,n2),simp);

/*Series 3 - geometric*/
a3:1/2;
r3:facr;
an_c: a3*(r3)^(n-1);          /*nth term of geogetric progresion */
n3:6;
SC1:ev(makelist(k,k,1,n3),simp);             /* create the sum of terms */
SC2:maplist(lambda([ex],ev(an_c,n=ex)),SC1);
SC3:ev(SC2,simp);
SC4:apply("+",SC3);
ta3: ev(gsum(a3,r3,n3),simp);</questionvariables>

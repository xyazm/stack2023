        <name>1.2.6.3 Simplify</name>
        <questiontext>&lt;p class="HELM_exercise"&gt;Exercise&lt;/p&gt;
&lt;p&gt;Simplify \({@a1@}\times 10^{@ind1@}\times{@b1@}\times 10^{@ind2@}\).&lt;/p&gt;

&lt;p&gt;[[input:ans1]] [[validation:ans1]]&lt;/p&gt;</questiontext>
        <questiontextformat>1</questiontextformat>

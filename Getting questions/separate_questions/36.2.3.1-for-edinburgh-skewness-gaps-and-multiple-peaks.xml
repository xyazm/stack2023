    &lt;/thead&gt;
    &lt;tbody&gt;
        &lt;tr&gt;
            &lt;td&gt;\([0,10]\)&lt;/td&gt;
            &lt;td&gt;\(23\)&lt;/td&gt;
        &lt;/tr&gt;
        &lt;tr&gt;
